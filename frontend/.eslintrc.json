{
  "extends": ["airbnb", "prettier", "plugin:node/recommended", "plugin:react-hooks/recommended"],
  "plugins": ["prettier", "simple-import-sort", "jest"],
  "rules": {
    "node/no-missing-import": ["error", {
      "allowModules": [],
      "resolvePaths": ["/src/"],
      "tryExtensions": [".js", ".jsx"]
    }],
    "prettier/prettier": "error",
    "no-unused-vars": "warn",
    "no-console": "warn",
    "func-names": "warn",
    "no-process-exit": "warn",
    "object-shorthand": "warn",
    "class-methods-use-this": "warn",
    "node/no-unsupported-features/es-syntax": [
      "error",
      { "ignores": ["modules"] }
    ],
    "simple-import-sort/imports": "error"
  },
  "parserOptions": {
      "sourceType": "module"
  },
  "env": {
    "jest/globals": true
  }
}
